<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/indigo_500</item>
		<item name="colorPrimaryDark">@color/indigo_500_dark</item>
		<item name="colorAccent">@android:color/black</item>

		<item name="android:statusBarColor">@android:color/white</item>
		<item name="android:windowBackground">@drawable/app_background</item>
		<item name="materialButtonStyle">@style/AppTheme.Button</item>
		<item name="android:fitsSystemWindows">true</item>
		<item name="snackbarStyle">@style/AppTheme.SnackBar</item>
		<item name="snackbarTextViewStyle">@style/AppTheme.SnackBarText</item>
		<item name="snackbarButtonStyle">@style/AppTheme.SnackBarButton</item>
		<item name="toolbarStyle">@style/AppTheme.Toolbar</item>
		<item name="materialCardViewStyle">@style/AppTheme.Card</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="colorControlHighlight">@color/indigo_500_light</item>
		<item name="materialAlertDialogTheme">@style/AppTheme.Dialog</item>
		<item name="actionMenuTextColor">@color/indigo_500</item>
	</style>

	<style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
		<item name="android:backgroundTint">@color/indigo_500</item>
		<item name="rippleColor">@android:color/white</item>
		<item name="android:textAllCaps">false</item>
		<item name="cornerRadius">4dp</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="AppTheme.SnackBar" parent="Widget.MaterialComponents.Snackbar">
		<item name="android:background">@drawable/snackbar</item>
	</style>

	<style name="AppTheme.SnackBarText" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="AppTheme.SnackBarButton" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:backgroundTint">@android:color/black</item>
		<item name="rippleColor">@color/indigo_500_light</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textColor">@color/yellow</item>
	</style>


	<style name="AppTheme.TransparentStatusBar">
		<item name="android:windowTranslucentStatus">true</item>
	</style>

	<style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
		<item name="android:elevation">8dp</item>
		<item name="android:background">@android:color/white</item>
		<item name="titleTextColor">@color/indigo_500</item>
	</style>

	<style name="AppTheme.Card" parent="Widget.MaterialComponents.CardView">
		<item name="cardCornerRadius">4dp</item>
		<item name="android:elevation">4dp</item>
		<item name="cardBackgroundColor">@android:color/white</item>
	</style>

	<style name="AppTheme.Caption">
		<item name="android:textColor">@color/indigo_500</item>
		<item name="android:textSize">14dp</item>
	</style>

	<style name="AppTheme.TextValue">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textSize">16dp</item>
	</style>

	<style name="AppTheme.FlatWhiteButton" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:backgroundTint">@android:color/white</item>
		<item name="rippleColor">@color/indigo_500_light</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textColor">@color/indigo_500</item>
	</style>

	<style name="AppTheme.Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
		<item name="android:background">@android:color/white</item>
	</style>

	<style name="AppTheme.SurfaceCard" parent="AppTheme.Card">
		<item name="cardCornerRadius">0dp</item>
	</style>

</resources>
